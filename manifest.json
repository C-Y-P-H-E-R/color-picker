{
    "name": "ColorPicker",
    "description": "The Best ColorPicker application out there",
    "version": "1.0.0",
    "manifest_version": 3,
    "host_permissions": [
        "https://www.csgoroll.gg/en/top-up"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "permissions": [
        "scripting",
        "activeTab",
        "storage"
    ],
    "action": {
        "default_popup": "popup.html"       
    },
    "icons": {
        "32" : "/assets/color-picker-32.png",
        "64" : "/assets/color-picker-64.png"
    }
}